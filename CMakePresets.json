{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 28,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_OVERLAY_PORTS": "${sourceDir}/vcpkg-overlays/cib/ports;${sourceDir}/vcpkg-overlays/stdx/ports;${sourceDir}/vcpkg-overlays/qlibs/ports;${sourceDir}/vcpkg-overlays/boost-ext/ports",
        "CMAKE_CXX_COMPILER": "clang++-21",
        "CMAKE_C_COMPILER": "clang-21",
        "CMAKE_CXX_STANDARD": "23",
        "SLOTMAP_BUILD_TESTS": "ON",
        "SLOTMAP_BUILD_DOCS": "ON"
      }
    },
    {
      "name": "clang-debug",
      "displayName": "Clang Debug",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "SLOTMAP_ENABLE_WARNINGS_AS_ERRORS": "ON"
      }
    },
    {
      "name": "clang-release",
      "displayName": "Clang Release",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "SLOTMAP_ENABLE_WARNINGS_AS_ERRORS": "OFF"
      }
    },
    {
      "name": "clang-asan",
      "displayName": "Clang AddressSanitizer",
      "description": "Debug build with AddressSanitizer (memory errors, buffer overflows, use-after-free)",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-fsanitize=address -fno-omit-frame-pointer -g",
        "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=address",
        "SLOTMAP_ENABLE_WARNINGS_AS_ERRORS": "ON"
      },
      "environment": {
        "ASAN_OPTIONS": "detect_leaks=1:detect_stack_use_after_return=1:check_initialization_order=1:strict_init_order=1"
      }
    },
    {
      "name": "clang-ubsan",
      "displayName": "Clang UndefinedBehaviorSanitizer",
      "description": "Debug build with UBSan (undefined behavior, integer overflow, null pointer dereference)",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-fsanitize=undefined -fno-omit-frame-pointer -g",
        "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=undefined",
        "SLOTMAP_ENABLE_WARNINGS_AS_ERRORS": "ON"
      },
      "environment": {
        "UBSAN_OPTIONS": "print_stacktrace=1:halt_on_error=1"
      }
    },
    {
      "name": "clang-tsan",
      "displayName": "Clang ThreadSanitizer",
      "description": "Debug build with ThreadSanitizer (data races, deadlocks)",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-fsanitize=thread -fno-omit-frame-pointer -g",
        "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=thread",
        "SLOTMAP_ENABLE_WARNINGS_AS_ERRORS": "ON"
      },
      "environment": {
        "TSAN_OPTIONS": "halt_on_error=1:second_deadlock_stack=1"
      }
    },
    {
      "name": "clang-msan",
      "displayName": "Clang MemorySanitizer",
      "description": "Debug build with MemorySanitizer (uninitialized memory reads)",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-fsanitize=memory -fsanitize-memory-track-origins=2 -fno-omit-frame-pointer -g",
        "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=memory",
        "SLOTMAP_ENABLE_WARNINGS_AS_ERRORS": "ON"
      },
      "environment": {
        "MSAN_OPTIONS": "halt_on_error=1"
      }
    },
    {
      "name": "clang-lsan",
      "displayName": "Clang LeakSanitizer",
      "description": "Debug build with standalone LeakSanitizer (memory leaks)",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-fsanitize=leak -fno-omit-frame-pointer -g",
        "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=leak",
        "SLOTMAP_ENABLE_WARNINGS_AS_ERRORS": "ON"
      },
      "environment": {
        "LSAN_OPTIONS": "suppressions=${sourceDir}/lsan.supp"
      }
    },
    {
      "name": "clang-asan-ubsan",
      "displayName": "Clang ASan+UBSan Combined",
      "description": "Debug build with both AddressSanitizer and UndefinedBehaviorSanitizer",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-fsanitize=address,undefined -fno-omit-frame-pointer -g",
        "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=address,undefined",
        "SLOTMAP_ENABLE_WARNINGS_AS_ERRORS": "ON"
      },
      "environment": {
        "ASAN_OPTIONS": "detect_leaks=1:detect_stack_use_after_return=1",
        "UBSAN_OPTIONS": "print_stacktrace=1:halt_on_error=1"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "clang-debug",
      "configurePreset": "clang-debug"
    },
    {
      "name": "clang-release",
      "configurePreset": "clang-release"
    },
    {
      "name": "clang-asan",
      "configurePreset": "clang-asan"
    },
    {
      "name": "clang-ubsan",
      "configurePreset": "clang-ubsan"
    },
    {
      "name": "clang-tsan",
      "configurePreset": "clang-tsan"
    },
    {
      "name": "clang-msan",
      "configurePreset": "clang-msan"
    },
    {
      "name": "clang-lsan",
      "configurePreset": "clang-lsan"
    },
    {
      "name": "clang-asan-ubsan",
      "configurePreset": "clang-asan-ubsan"
    }
  ],
  "testPresets": [
    {
      "name": "clang-debug",
      "configurePreset": "clang-debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "clang-asan",
      "configurePreset": "clang-asan",
      "output": {
        "outputOnFailure": true
      },
      "environment": {
        "ASAN_OPTIONS": "detect_leaks=1:detect_stack_use_after_return=1:check_initialization_order=1:strict_init_order=1"
      }
    },
    {
      "name": "clang-ubsan",
      "configurePreset": "clang-ubsan",
      "output": {
        "outputOnFailure": true
      },
      "environment": {
        "UBSAN_OPTIONS": "print_stacktrace=1:halt_on_error=1"
      }
    },
    {
      "name": "clang-tsan",
      "configurePreset": "clang-tsan",
      "output": {
        "outputOnFailure": true
      },
      "environment": {
        "TSAN_OPTIONS": "halt_on_error=1:second_deadlock_stack=1"
      }
    },
    {
      "name": "clang-msan",
      "configurePreset": "clang-msan",
      "output": {
        "outputOnFailure": true
      },
      "environment": {
        "MSAN_OPTIONS": "halt_on_error=1"
      }
    },
    {
      "name": "clang-lsan",
      "configurePreset": "clang-lsan",
      "output": {
        "outputOnFailure": true
      },
      "environment": {
        "LSAN_OPTIONS": "exitcode=0"
      }
    },
    {
      "name": "clang-asan-ubsan",
      "configurePreset": "clang-asan-ubsan",
      "output": {
        "outputOnFailure": true
      },
      "environment": {
        "ASAN_OPTIONS": "detect_leaks=1:detect_stack_use_after_return=1",
        "UBSAN_OPTIONS": "print_stacktrace=1:halt_on_error=1"
      }
    }
  ]
}
