{
  "name": "SlotMap Dev",
  "dockerFile": "Dockerfile",
  "workspaceFolder": "/workspaces/SlotMap",
  "remoteUser": "slotmap",
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt=seccomp=unconfined"
  ],
  "containerEnv": {
    "CC": "clang-21",
    "CXX": "clang++-21",
    "VCPKG_ROOT": "/opt/vcpkg",
    "VCPKG_OVERLAY_PORTS": "/workspaces/SlotMap/vcpkg-overlays/cib/ports;/workspaces/SlotMap/vcpkg-overlays/stdx/ports;/workspaces/SlotMap/vcpkg-overlays/qlibs/ports;/workspaces/SlotMap/vcpkg-overlays/boost-ext/ports"
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspaces/SlotMap,type=bind,consistency=cached",
    "source=slotmap-vcpkg,target=/opt/vcpkg/downloads,type=volume"
  ],
  "forwardPorts": [9222],
  "postCreateCommand": "cmake --preset clang-debug",
  "features": {
    "ghcr.io/devcontainers/features/sshd:1": {
      "version": "latest",
      "port": "9222",
      "options": "PermitRootLogin no"
    }
  },
  "customizations": {
    "jetbrains": {
      "clion": {
        "autoConfigure": true,
        "workspaceModel": "default"
      }
    }
  }
}
